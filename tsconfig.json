{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "dist",
		"allowJs": true,
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"baseUrl": "src",
	},
	"include": [
		"src"
	]
}