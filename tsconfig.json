{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2017",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"module": "CommonJS",
		"strict": true,
	},
	"paths": {
		"*": [
			"node_modules/*",
			"src/interfaces/*"
		]
	},
	"include": [
		"./src/**/*"
	]
}