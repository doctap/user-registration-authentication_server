{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2017",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"strict": true,
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}